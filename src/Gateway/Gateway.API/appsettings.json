{
    "ReverseProxy": {
        "Routes": {
            "catalog-route": {
                "ClusterId": "catalog-cluster",
                "Match": {
                    "Path": "/product-api/{**catch-all}"
                },
                "Transforms": [ { "PathPattern": "{**catch-all}" } ]
            }
        },
        "Clusters": {
            "catalog-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://host.docker.internal:6000"
                    }
                }
            }
        }
        
        },
        "Logging": {
            "LogLevel": {
                "Default": "Information",
                "Microsoft.AspNetCore": "Warning"
            }
        },
        "AllowedHosts": "*"
    }
